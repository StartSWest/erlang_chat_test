[
  {chat_client, [
    % Server address (erlang node name, check 'server_name_type').
    % i.e.: 'main_server@192.168.1.100'
    {server_name, 'backup_server@192.168.1.101'},
    
    % Sets if the server is using short names or fully qualified host name.
    % shortnames | longnames (for fully qualified host name)
    {server_name_type, longnames},
    
    % cookie for distributed node connection.
    % i.e.: 'secure123'
    {server_cookie, 'secure123'}
  ]}
].